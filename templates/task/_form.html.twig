
{{ form_start(form, {'action' : path('task_create')}) }}
    <div class="my-2">
        {{ form_row(form.title) }}
    </div>
    <div class="my-2">
        {{ form_row(form.content) }}
    </div>

    {% if form.author is defined %}
        <div class="my-2">
            {{ form_row(form.author) }}
        </div>
    {% else %}
        <div class="alert alert-info">
            Auteur : <strong>Anonyme</strong>
        </div>
    {% endif %}

    <button type="submit" class="btn btn-success pull-right my-2">
        {{ path == 'task_create' ? 'Ajouter' : 'Modifier' }}
    </button>
{{ form_end(form) }}
