        {{ form_start(form, {'action' : path('task_create')}) }}
            <div class="my-2">
                {{ form_row(form.title) }}
            </div>
            <div class="my-2">
                {{ form_row(form.content) }}
            </div>
            {# <div class="my-2">
                {{ form_row(form.author) }}
            </div> #}

            <button type="submit" class="my-2 btn btn-success pull-right">Ajouter</button>
