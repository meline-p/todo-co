{% extends 'base.html.twig' %}

{% block header_title %}Inscription{% endblock %}

{% block body %}
    {{ form_start(form, {'action': path('sign_up')}) }}
        <div class="my-2">
            {{ form_row(form.username) }}
        </div>
        <div class="my-2">
            {{ form_row(form.email) }}
        </div>

        {% if form.password is defined %}
            <div class="my-2">
                {{ form_row(form.password) }}
            </div>
        {% endif %}

        <button type="submit" class="btn bg-green pull-right mt-2">S'inscrire</button>

    {{ form_end(form) }}
{% endblock %}
